{
	"name": "IvoryTower Checker",
	"short_name": "IT Check",
	"author": "Cody Jung",
	"version": "1.2.1",
	"description": "Checks IvoryTower for unread threads",
	"icons": {
		"48": "icon48.png",
		"128": "icon128.png"
	},
	"browser_action": {
		"default_icon": "icon.png",
		"default_title": "No unread threads",
		"default_popup": "popup.html"
	},
	"permissions": [
		"alarms",
		"webNavigation",
		"http://ivorytower.com/"
	],
	"background": {
		"scripts": ["jquery-2.1.0.min.js", "background.js", "cohort-year-adder.js", "shortcuts.js"],
		"persistent": false
	},
	"content_scripts": [
		{
		  "matches": ["http://*.ivorytower.com/*"],
		  "js": ["jquery-2.1.0.min.js","cohort-year-adder.js", "shortcuts.js"]
		}
	],
	"manifest_version": 2
}